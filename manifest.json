{
  "manifest_version": 3,
  "name": "React Extension FA",
  "description": "Extension React for FA",
  "version": "0.1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "popup_icon.png"
  },
  "icons": {
    "32": "icons/icon_32x32.png",
    "64": "icons/icon_64x64.png",
    "128": "icons/icon_128x128.png"
  },
  "content_scripts": [
    {
      "js": [
        "src/content.tsx"
      ],
      "matches": [
        "https://hh.ru/search/*"
      ]
    }
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ]
}
